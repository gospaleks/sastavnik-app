generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String?
  lastName  String?
  email     String   @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  essays  Essay[]
  ratings Rating[]
}

model Essay {
  id         String     @id @default(uuid())
  title      String
  content    String
  tags       String[]
  level      Int
  schoolType SchoolType
  published  Boolean    @default(true) // kasnije moze false pa da admin odobri
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  ratings Rating[]
}

enum SchoolType {
  OSNOVNA
  SREDNJA
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  essays Essay[]
}

model Rating {
  id        String   @id @default(uuid())
  value     Int
  createdAt DateTime @default(now())

  essay   Essay  @relation(fields: [essayId], references: [id])
  essayId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([essayId, userId])
}
